<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!--
        <ImageView
            android:id="@+id/status_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_status_live" 
            android:layout_marginEnd="16dp"/>
        -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/feeder_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feeder Name"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/substation_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Substation Name" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Live"
                android:textColor="@color/dashboard_green"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/lc_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LC #1234" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>